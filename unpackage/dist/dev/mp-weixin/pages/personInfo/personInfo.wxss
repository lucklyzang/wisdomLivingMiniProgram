page {
  width: 100%;
  height: 100%;
}
.content-box {
  display: flex;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  flex-direction: column;
}
.content-box .top-area-box {
  position: relative;
  width: 100%;
  height: 230px;
}
.content-box .top-area-box > image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 230px;
}
.content-box .top-area-box .user-info {
  width: 100%;
  height: 30vh;
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 20px;
  padding-left: 10px;
  box-sizing: border-box;
}
.content-box .top-area-box .user-info .user-photo {
  width: 76px;
  height: 76px;
  margin-right: 15px;
  border-radius: 50%;
  z-index: 1;
}
.content-box .top-area-box .user-info .user-photo image {
  width: 76px;
  height: 76px;
}
.content-box .top-area-box .user-nickname {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  padding-right: 10px;
  box-sizing: border-box;
  z-index: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.content-box .top-area-box .user-nickname > text:last-child {
  font-size: 14px;
  color: #EDEDED;
  margin-top: 10px;
}
.content-box .center-area-box {
  width: 90%;
  height: 131px;
  margin: 0 auto;
  border-radius: 10px;
  margin-top: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 2px 6px 0 rgba(92, 133, 136, 0.29);
}
.content-box .center-area-box > view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content-box .center-area-box > view > image {
  width: 58px;
  height: 58px;
  margin-bottom: 10px;
}
.content-box .center-area-box > view > text {
  color: #101010;
  font-size: 14px;
}
.content-box .bottom-area-box {
  width: 90%;
  margin: 0 auto;
  padding: 0 2px;
  box-sizing: border-box;
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: auto;
  flex-grow: 0;
}
.content-box .bottom-area-box > view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  margin-bottom: 20px;
}
.content-box .bottom-area-box > view .function-item-left > image {
  width: 24px;
  height: 24px;
  margin-right: 6px;
  vertical-align: middle;
}
.content-box .bottom-area-box > view .function-item-left > text {
  color: #101010;
  font-size: 14px;
  vertical-align: middle;
}

