page {
  width: 100%;
  height: 100%;
}
.content-box {
  display: flex;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  flex-direction: column;
  padding-bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.content-box ::-webkit-scrollbar {
  width: 0;
  height: 0;
  background-color: transparent;
}
.content-box .nav {
  width: 100%;
  background: #fff;
}
.content-box .operation-area {
  position: fixed;
  right: 0;
  bottom: 10vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content-box .operation-area > image:first-child {
  width: 70px;
  height: 70px;
  margin-bottom: 20px;
}
.content-box .operation-area > image:last-child {
  width: 54px;
  height: 54px;
}
.content-box .content-area {
  padding: 16px;
  background: #f5f5f5;
  box-sizing: border-box;
  flex: 1;
  overflow: auto;
  display: flex;
  align-items: center;
  flex-direction: column;
  position: relative;
}
.content-box .content-area  .u-empty {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.content-box .content-area .room-list {
  width: 100%;
  height: 50px;
  border-radius: 5px;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
  font-size: 14px;
  color: #101010;
}

