page {
  width: 100%;
  height: 100%;
}
.content-box {
  display: flex;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  flex-direction: column;
  padding-bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.content-box ::-webkit-scrollbar {
  width: 0;
  height: 0;
  background-color: transparent;
}
.content-box .nav {
  width: 100%;
  background: #fff;
}
.content-box .nav  .header_title_center {
  left: 240px !important;
}
.content-box .nav  .header_title_center > image {
  width: 24px;
  height: 24px;
}
.content-box .nav  .header_title_center > image:first-child {
  margin-right: 14px;
}
.content-box .content-area {
  padding: 10px 16px 16px 16px;
  flex: 1;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.content-box .content-area .add-device-area {
  display: flex;
  height: 40vh;
  flex-direction: column;
  position: relative;
  border: none;
}
.content-box .content-area .add-device-area:after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background-color: #BBBBBB;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
}
.content-box .content-area .add-device-area > view:nth-child(1) {
  color: #101010;
  font-size: 20px;
  display: flex;
  flex-direction: column;
}
.content-box .content-area .add-device-area > view:nth-child(1) > text:last-child {
  margin-top: 2px;
  color: #656565;
  font-size: 14px;
}
.content-box .content-area .add-device-area > view:nth-child(2) {
  flex: 1;
  padding: 10px 0;
  box-sizing: border-box;
  overflow: auto;
  display: flex;
  flex-wrap: wrap;
  flex-shrink: 0;
  align-content: flex-start;
}
.content-box .content-area .add-device-area > view:nth-child(2) .device-list {
  margin-bottom: 10px;
  padding: 4px;
  margin-right: 2%;
  border-radius: 10px;
  background: #E5E5E5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  width: 32%;
  height: 104px;
}
.content-box .content-area .add-device-area > view:nth-child(2) .device-list > image {
  width: 38px;
  height: 46px;
  margin-bottom: 10px;
}
.content-box .content-area .add-device-area > view:nth-child(2) .device-list > text {
  color: #101010;
  font-size: 14px;
}
.content-box .content-area .add-device-area > view:nth-child(2) .device-list:nth-child(3n) {
  margin-right: 0 !important;
}
.content-box .content-area .manual-add-device-area {
  margin-top: 10px;
  display: flex;
  flex: 1;
  flex-direction: column;
}
.content-box .content-area .manual-add-device-area .manual-add-device-title {
  height: 40px;
  line-height: 40px;
  color: #656565;
  font-size: 14px;
}
.content-box .content-area .manual-add-device-area .device-list-area {
  flex: 1;
  overflow: auto;
  display: flex;
  flex-wrap: wrap;
  flex-shrink: 0;
  justify-content: space-between;
  align-content: flex-start;
}
.content-box .content-area .manual-add-device-area .device-list-area .device-list {
  margin-bottom: 10px;
  padding: 4px;
  border-radius: 10px;
  box-shadow: 0px 2px 6px 0 rgba(0, 0, 9, 0.1);
  display: flex;
  align-items: center;
  box-sizing: border-box;
  width: 48%;
  height: 51px;
}
.content-box .content-area .manual-add-device-area .device-list-area .device-list > image {
  width: 38px;
  height: 46px;
  margin-right: 10px;
}
.content-box .content-area .manual-add-device-area .device-list-area .device-list > text {
  color: #101010;
  font-size: 14px;
}

