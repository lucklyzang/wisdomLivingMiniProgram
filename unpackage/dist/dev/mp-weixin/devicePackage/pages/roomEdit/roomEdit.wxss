page {
  width: 100%;
  height: 100%;
}
.content-box {
  display: flex;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  flex-direction: column;
  padding-bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.content-box ::-webkit-scrollbar {
  width: 0;
  height: 0;
  background-color: transparent;
}
.content-box .nav {
  width: 100%;
  background: #fff;
}
.content-box .content-area {
  padding: 16px;
  background: #f5f5f5;
  box-sizing: border-box;
  flex: 1;
  overflow: auto;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.content-box .content-area .content-top-area {
  width: 100%;
  margin-bottom: 14px;
}
.content-box .content-area .content-top-area  .u-input {
  background: #fff !important;
}
.content-box .content-area .recommend-room-area {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: auto;
}
.content-box .content-area .recommend-room-area .recommend-room-title {
  width: 100%;
  font-size: 14px;
  color: #101010;
  margin-bottom: 14px;
}
.content-box .content-area .recommend-room-area .recommend-room-list-wrapper {
  width: 100%;
  flex: 1;
  overflow: auto;
  flex-wrap: wrap;
  display: flex;
  align-content: flex-start;
}
.content-box .content-area .recommend-room-area .recommend-room-list-wrapper .recommend-room-list {
  margin-right: 2%;
  margin-bottom: 10px;
  border-radius: 5px;
  width: 32%;
  height: 40px;
  display: flex;
  background: #fff;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #101010;
}
.content-box .content-area .recommend-room-area .recommend-room-list-wrapper .recommend-room-list:nth-child(3n) {
  margin-right: 0 !important;
}
.content-box .content-area .operation-area {
  height: 80px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content-box .content-area .operation-area > text {
  font-size: 18px;
  display: inline-block;
  border-radius: 26px;
  width: 45%;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content-box .content-area .operation-area > text:first-child {
  border: 1px solid #E86F50;
  color: #E86F50;
}
.content-box .content-area .operation-area > text:last-child {
  background: #11D183;
  color: #fff;
}

