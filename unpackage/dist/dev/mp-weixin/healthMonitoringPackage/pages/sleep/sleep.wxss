page {
  width: 100%;
  height: 100%;
}
.content-box {
  display: flex;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  flex-direction: column;
  padding-bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.content-box ::-webkit-scrollbar {
  width: 0;
  height: 0;
  background-color: transparent;
}
.content-box .nav {
  width: 100%;
  background: #fff;
}
.content-box .content-area {
  flex: 1;
  background: #F5F5F5;
  overflow: auto;
  display: flex;
  flex-direction: column;
}
.content-box .content-area .content-top-area {
  background: #fff;
  height: 470px;
  display: flex;
  flex-direction: column;
}
.content-box .content-area .content-top-area .content-top-title {
  width: 70%;
  height: 41px;
  margin: 0 auto;
  margin-top: 20px;
}
.content-box .content-area .content-top-area .content-top-content {
  margin-top: 10px;
  flex: 1;
}
.content-box .content-area .content-top-area .content-top-content .day-data-area {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.content-box .content-area .content-top-area .content-top-content .day-data-area .data-top {
  width: 70%;
