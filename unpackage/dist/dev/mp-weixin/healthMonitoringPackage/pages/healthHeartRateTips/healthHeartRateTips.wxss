page {
  width: 100%;
  height: 100%;
}
.content-box {
  display: flex;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  flex-direction: column;
  padding-bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.content-box ::-webkit-scrollbar {
  width: 0;
  height: 0;
  background-color: transparent;
}
.content-box .nav {
  width: 100%;
  background: #fff;
}
.content-box .content-area {
  padding: 16px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.content-box .content-area .paragraph-one {
  text-indent: 12px;
}
.content-box .content-area .paragraph-one > text {
  font-size: 14px;
  color: #898C8C;
  line-height: 20px;
  text-align: justify;
}
.content-box .content-area .paragraph-image {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200px;
}
.content-box .content-area .paragraph-image > image {
  width: 265px;
  height: 174px;
}
.content-box .content-area .paragraph-two {
  text-indent: 12px;
  flex: 1;
  overflow: auto;
}
.content-box .content-area .paragraph-two > view {
  margin-bottom: 6px;
}
.content-box .content-area .paragraph-two > view > text {
  font-size: 14px;
  color: #898C8C;
  line-height: 20px;
  text-align: justify;
}
.content-box .content-area .paragraph-two > view > text:first-child {
  font-size: 16px;
  color: #898C8C;
  font-weight: bold;
}

