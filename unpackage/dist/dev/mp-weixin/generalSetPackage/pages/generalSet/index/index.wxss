page {
  width: 100%;
  height: 100%;
}
.content-box {
  display: flex;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  flex-direction: column;
  padding-bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.content-box ::-webkit-scrollbar {
  width: 0;
  height: 0;
  background-color: transparent;
}
.content-box .nav {
  width: 100%;
  background: #fff;
}
.content-box .content-area {
  height: 100%;
  padding: 10px 16px 16px 16px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.content-box .content-area .content-title {
  font-size: 24px;
  color: #101010;
  font-weight: bold;
  margin-bottom: 10px;
}
.content-box .content-area .specific-content {
  flex: 1;
  overflow: auto;
  font-size: 14px;
  color: #101010;
  display: flex;
  flex-direction: column;
}
.content-box .content-area .specific-content > text {
  line-height: 22px;
  margin-bottom: 10px;
}

