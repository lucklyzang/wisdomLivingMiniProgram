page {
  width: 100%;
  height: 100%;
}
.content-box {
  display: flex;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  flex-direction: column;
  padding-bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.content-box ::-webkit-scrollbar {
  width: 0;
  height: 0;
  background-color: transparent;
}
.content-box .nav {
  width: 100%;
  background: #fff;
}
.content-box .content-area {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.content-box .content-area .edit-top {
  height: 30vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content-box .content-area .edit-top .user-photo-box {
  width: 89px;
  height: 89px;
  border-radius: 50%;
}
.content-box .content-area .edit-top .user-photo-box image {
  width: 89px;
  height: 89px;
}
.content-box .content-area .edit-top > text {
  width: 91px;
  height: 32px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #11D183;
  font-size: 14px;
  margin-top: 6px;
  color: #11D183;
}
.content-box .content-area .edit-bottom {
  width: 100%;
  flex: 1;
  background: #F5F5F5;
  padding: 10px;
  box-sizing: border-box;
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.content-box .content-area .edit-bottom .input-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content-box .content-area .edit-bottom .input-area > view {
  width: 100%;
  height: 41px;
  background: #fff;
  padding: 0 4px;
  margin-bottom: 10px;
  display: flex;
  padding-left: 10px;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}
.content-box .content-area .edit-bottom .input-area > view > text {
  width: 120px;
  display: inline-block;
  font-size: 14px;
  color: #A7A7A3;
}
.content-box .content-area .edit-bottom .input-area .nice-name-area  u-input {
  flex: 1;
  padding-left: 6px !important;
  box-sizing: border-box;
}
.content-box .content-area .edit-bottom .input-area .birthday-area .date-box {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.content-box .content-area .edit-bottom .input-area .birthday-area .date-box > view {
  flex: 1;
  position: relative;
  margin-right: 6px;
  height: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1px solid #BBBBBB;
  border-radius: 6px;
  padding: 4px;
  box-sizing: border-box;
}
.content-box .content-area .edit-bottom .input-area .birthday-area .date-box > view > text {
  font-size: 12px;
  color: #101010;
}
.content-box .content-area .edit-bottom .input-area .birthday-area .date-box > view:last-child {
  margin-right: 0 !important;
}
.content-box .content-area .edit-bottom .input-area .birthday-area .date-box .year-area .year-list-box {
  position: absolute;
  width: 70px;
  top: 36px;
  left: 0;
  border-radius: 4px;
  background: #fff;
  height: 250px;
  padding: 4px;
  overflow: auto;
  box-sizing: border-box;
}
.content-box .content-area .edit-bottom .input-area .birthday-area .date-box .year-area .year-list-box .year-list {
  padding: 4px;
  text-align: center;
  box-sizing: border-box;
}
.content-box .content-area .edit-bottom .input-area .birthday-area .date-box .year-area .year-list-box .yearListStyle {
  color: #11D183;
}
.content-box .content-area .edit-bottom .input-area .birthday-area .date-box .month-area .month-list-box {
  position: absolute;
  width: 70px;
  top: 36px;
  left: 0;
  border-radius: 4px;
  background: #fff;
  height: 250px;
  overflow: auto;
  padding: 4px;
  box-sizing: border-box;
}
.content-box .content-area .edit-bottom .input-area .birthday-area .date-box .month-area .month-list-box .month-list {
  padding: 4px;
  text-align: center;
  box-sizing: border-box;
}
.content-box .content-area .edit-bottom .input-area .birthday-area .date-box .month-area .month-list-box .monthListStyle {
  color: #11D183;
}
.content-box .content-area .edit-bottom .input-area .birthday-area .date-box .day-area .day-list-box {
  position: absolute;
  width: 70px;
  top: 36px;
  left: 0;
  border-radius: 4px;
  background: #fff;
  height: 250px;
  overflow: auto;
  padding: 4px;
  box-sizing: border-box;
}
.content-box .content-area .edit-bottom .input-area .birthday-area .date-box .day-area .day-list-box .day-list {
  padding: 4px;
  text-align: center;
  box-sizing: border-box;
}
.content-box .content-area .edit-bottom .input-area .birthday-area .date-box .day-area .day-list-box .dayListStyle {
  color: #11D183;
}
.content-box .content-area .edit-bottom .input-area .gender-area  u-radio-group {
  flex: 1;
}
.content-box .content-area .edit-bottom .input-area .gender-area  u-radio-group .u-radio {
  width: 30% !important;
}
.content-box .content-area .edit-bottom .btn-area {
  height: 120px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content-box .content-area .edit-bottom .btn-area > text {
  width: 90%;
  display: inline-block;
  height: 42px;
  text-align: center;
  line-height: 42px;
  border-radius: 4px;
  background: #11D183;
  font-size: 12px;
  color: #fff;
}

