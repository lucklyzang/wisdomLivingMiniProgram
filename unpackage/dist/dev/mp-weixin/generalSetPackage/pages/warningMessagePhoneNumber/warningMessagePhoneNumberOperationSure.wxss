page {
  width: 100%;
  height: 100%;
}
.content-box {
  display: flex;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  flex-direction: column;
  padding-bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.content-box ::-webkit-scrollbar {
  width: 0;
  height: 0;
  background-color: transparent;
}
.content-box .nav {
  width: 100%;
  background: #fff;
}
.content-box .content-area {
  width: 100%;
  flex: 1;
  background: #F5F5F5;
  padding: 10px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.content-box .content-area .content-top-area {
  flex: 1;
}
.content-box .content-area .content-top-area  .u-form .u-form-item:first-child {
  margin-bottom: 10px;
  padding: 0 !important;
}
.content-box .content-area .content-top-area  .u-form .u-form-item:first-child .u-input__input {
  background: #fff;
  padding-left: 8px;
  box-sizing: border-box;
  margin-right: 20px;
}
.content-box .content-area .content-top-area  .u-form .u-form-item:first-child .u-form-item--right__content__icon {
  background: #11D183;
  color: #fff;
  height: 25px;
  font-size: 12px;
  padding: 0 10px;
  border-radius: 4px;
}
.content-box .content-area .content-top-area  .u-form .u-form-item:last-child {
  background: #fff;
  padding: 2px 8px !important;
  box-sizing: border-box;
  margin-bottom: 10px;
}
.content-box .content-area .content-top-area  .u-form .u-form-item:last-child .u-form-item--left__content__icon {
  color: #11D183;
  font-size: 16px;
}
.content-box .content-area .content-top-area  .u-form .u-form-item .uni-input-placeholder {
  color: #C1C2C5 !important;
  font-size: 14px !important;
}
.content-box .content-area .content-bottom-area {
  width: 100%;
  height: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content-box .content-area .content-bottom-area .content-bottom {
  width: 90%;
  height: 42px;
  background: #11D183;
  border-radius: 4px;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

