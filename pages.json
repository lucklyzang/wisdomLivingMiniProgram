{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"lazyCodeLoading": "requiredComponents ",
	"pages": [
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "",
				"navigationBarBackgroundColor": "#75b0f0",
				"navigationBarTextStyle": "black",
				"navigationStyle" : "custom"
			}
		},
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "",
				"navigationBarBackgroundColor": "#75b0f0",
				"navigationBarTextStyle": "black",
				"navigationStyle" : "custom"
			}
		},
		{
			"path": "pages/device/device",
			"style": {
				"navigationBarTitleText": "",
				"navigationBarBackgroundColor": "#75b0f0",
				"navigationBarTextStyle": "black",
				"navigationStyle" : "custom"
			}
		},
		{
			"path": "pages/personInfo/personInfo",
			"style": {
				"navigationBarTitleText": "个人资料",
				"navigationBarBackgroundColor": "#75b0f0",
				"navigationBarTextStyle": "white",
				"backgroundColorBottom": "#f7f7f7",
				"navigationStyle" : "custom"
			}
		}
	],
	"subPackages": [
		{
			"root": "healthMonitoringPackage",
			"name": "rootHealthMonitoring",
			"pages": [
				{
					"path": "pages/healthMonitoring/index/index",
					"style": {
						"navigationBarTitleText": "",
						"navigationBarBackgroundColor": "#ffffff",
						"backgroundColorTop": "#fff,",
						"backgroundColorBottom": "#fff"
					}
				}
			]
		},
		{
			"root": "devicePackage",
			"name": "rootDevice",
			"pages": [
				{
					"path": "pages/device/index/index",
					"style": {
						"navigationBarTitleText": "",
						"navigationBarBackgroundColor": "#ffffff",
						"backgroundColorTop": "#fff,",
						"backgroundColorBottom": "#fff"
					}
				}
			]
		}
	],
	"preloadRule": {
		"healthMonitoringPackage/pages/healthMonitoring/index/index": {
				"network": "all",
				"packages": ["healthMonitoringPackage"]
		},
		"devicePackage/pages/device/index/index": {
				"network": "all",
				"packages": ["devicePackage"]
		}
	},
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "",
		"navigationBarBackgroundColor": "#fff",
		"backgroundColor": "#FFFFFF",
		"navigationStyle": "custom"
	},
	"tabBar":{
	"color":"#909090",
	"selectedColor":"#34B9C0",
	"backgroundColor":"#fff",
	"borderStyle":"white",
	"list":[
			{
				"pagePath":"pages/index/index",
				"text":"健康",
				"iconPath":"static/img/health-icon.png",
				"selectedIconPath":"static/img/health-icon-active.png"
			},
			{
				"pagePath":"pages/device/device",
				"text":"设备",
				"iconPath":"static/img/device-icon.png",
				"selectedIconPath":"static/img/device-icon-active.png"
			},
			{
				"pagePath":"pages/personInfo/personInfo",
				"text":"我的",
				"iconPath":"static/img/my-icon.png",
				"selectedIconPath":"static/img/my-icon-active.png"
			}
		]
	}
}
